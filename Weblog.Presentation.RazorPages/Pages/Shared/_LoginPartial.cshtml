@using Microsoft.AspNetCore.Identity
@using Weblog.Infra.Db.SqlServer.EfCore
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <!-- Optional: Show the user's name or link to profile -->
            <a class="nav-link text-dark" href="#">سلام @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary me-2" asp-page="/Author/Index">پنل نویسنده</a>
        </li>
        <li class="nav-item">
            <!--
                LOGOUT FIX:
                Razor Pages Logout uses POST for security.
                We use a form with a button styled as a link to match your original look.
            -->
            <form class="form-inline" asp-page="/Account/Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark" style="cursor:pointer;">خروج</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <!-- LINK FIX: Use asp-page instead of asp-controller/asp-action -->
            <a class="nav-link text-dark" asp-page="/Account/Login">ورود</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Register">ثبت نام</a>
        </li>
    }
</ul>