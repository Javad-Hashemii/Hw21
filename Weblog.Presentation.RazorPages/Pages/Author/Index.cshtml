@page
@model Weblog.Presentation.RazorPages.Pages.Author.IndexModel
@{
    ViewData["Title"] = "پنل نویسنده";
}

<div class="container py-4">
    <h1 class="mb-4">سلام @User.Identity?.Name!</h1>
    <p class="text-muted">از اینجا می‌توانید دستهبندی‌ها، پست‌ها و کامنت‌های خود را مدیریت کنید.</p>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">مدیریت دسته‌بندی‌ها</h5>
                    <p class="card-text">تعداد دسته‌بندی‌های شما: <strong>@Model.CategoryCount</strong></p>
                    <a asp-page="/Author/Categories/Index" class="btn btn-primary">ورود به مدیریت دسته‌بندی</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">مدیریت پست‌ها</h5>
                    <p class="card-text">تعداد پست‌های شما: <strong>@Model.PostCount</strong></p>
                    <a asp-page="/Author/Posts/Index" class="btn btn-success">ورود به مدیریت پست</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">مدیریت کامنت‌ها</h5>
                    <p class="card-text">
                        کامنت‌های در انتظار تایید: <strong>@Model.PendingComments</strong>
                    </p>
                    <a asp-page="/Author/Comments/Index" class="btn btn-warning text-white">مشاهده کامنت‌ها</a>
                </div>
            </div>
        </div>
    </div>
</div>

