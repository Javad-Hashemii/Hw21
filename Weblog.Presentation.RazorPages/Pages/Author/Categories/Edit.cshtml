@page "{id:int}"
@model Weblog.Presentation.RazorPages.Pages.Author.Categories.EditModel
@{
    ViewData["Title"] = "ویرایش دسته‌بندی";
}

<h3>@ViewData["Title"]</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />

            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning">تغییر</button>
            <a asp-page="./Index" class="btn btn-secondary">بازگشت</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}