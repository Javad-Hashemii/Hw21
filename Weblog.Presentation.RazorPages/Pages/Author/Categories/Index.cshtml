@page
@model Weblog.Presentation.RazorPages.Pages.Author.Categories.IndexModel
@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>@ViewData["Title"]</h3>
    <!-- Link to the separate Create page -->
    <a asp-page="./Create" class="btn btn-primary">ایجاد دسته‌بندی جدید</a>
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>نام</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <!-- Link to separate Edit page -->
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">ویرایش</a>

                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirm('آیا مطمئن هستید؟');">
                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>