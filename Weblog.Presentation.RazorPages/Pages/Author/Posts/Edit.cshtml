@page "{id:int}"
@model Weblog.Presentation.RazorPages.Pages.Author.Posts.EditModel
@{
    ViewData["Title"] = "ویرایش پست";
    var cover = Model.ExistingCover;
    var isAbsolute = !string.IsNullOrWhiteSpace(cover) && (cover.StartsWith("http://") || cover.StartsWith("https://"));
    var imageSrc = isAbsolute ? cover : (!string.IsNullOrWhiteSpace(cover) ? $"/{cover}" : null);
}

<div class="container py-4">
    <h1 class="mb-4">ویرایش پست</h1>

    <form method="post" enctype="multipart/form-data" class="card shadow-sm">
        <div class="card-body">
            <input type="hidden" asp-for="Input.Id" />

            <div class="mb-3">
                <label asp-for="Input.Title" class="form-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.CategoryId" class="form-label">دسته‌بندی</label>
                <select asp-for="Input.CategoryId" class="form-select">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.PublishedDate" class="form-label">تاریخ انتشار</label>
                <input asp-for="Input.PublishedDate" class="form-control" type="date" />
            </div>

            <div class="mb-3">
                <label asp-for="Input.Text" class="form-label">متن اصلی</label>
                <textarea asp-for="Input.Text" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Input.Text" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ImageFile" class="form-label">تصویر شاخص جدید (اختیاری)</label>
                <input asp-for="Input.ImageFile" class="form-control" accept=".png,.jpg,.jpeg" />
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
                @if (!string.IsNullOrWhiteSpace(imageSrc))
                {
                    <div class="mt-2">
                        <p class="text-muted mb-1">تصویر فعلی:</p>
                        <img src="@imageSrc" alt="Cover" class="img-thumbnail" style="max-height: 200px;" />
                    </div>
                }
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-page="Index" class="btn btn-outline-secondary">بازگشت</a>
            <button type="submit" class="btn btn-success">ذخیره تغییرات</button>
        </div>
    </form>
</div>

<partial name="_ValidationScriptsPartial" />

